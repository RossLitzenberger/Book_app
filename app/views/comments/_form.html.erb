<%= form_for ([@book, @book.comments.build]) do |f| %>
  <%= render "shared/errors", object: [@book, @comment] %>
  <%= f.text_field :field_1, class: "form-control" %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <br>
  <p>
    <%= f.submit %>
  </p>
<% end %>
