<%= form_for ([@book, @book.comments.build]) do |f| %>
  <%= form_errors_for @book%>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <br>
  <p>
    <%= f.submit class: "btn btn-success" %>
  </p>
<% end %>
