<!DOCTYPE html>
<html>
<head>
  <title>BookApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="col-md-12">
  <% if user_signed_in? %>
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-info" %>
    <%= link_to "Profile", edit_user_registration_path , class: "btn btn-info" %>
    <%= link_to "New", new_book_path, class: "btn btn-primary"%>
  <% else %>
    <%= link_to "Sign Up", new_user_registration_path , class: "btn btn-info" %>
    <%= link_to "Sign In", new_user_session_path , class: "btn btn-info" %>
  <% end %>
  <%= yield %>
  <%= yield :form_errors %>
  </div>
</div>

</body>
</html>
