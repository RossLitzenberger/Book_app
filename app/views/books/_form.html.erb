
<%= form_for @book, html: { multipart: true }  do |f| %>

  <%= form_errors_for @book%>

  <div class="form-group">
    <%= f.label :book_name%>:
    <%= f.text_field :book_name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :author%>:
    <%= f.text_field :author, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :illustator%>:
    <%= f.text_field :illustator, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :cover,  "Attach an Image"  %>
    <%= f.file_field :cover%>
  </div>

  <% if @book.cover.exists? %>
    <%= image_tag @book.cover.url(:medium) %>
  <% end %>

  <div class="clearfix">
    <%= f.submit class: "btn btn-success"  %>
  </div>

<% end %>
