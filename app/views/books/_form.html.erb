<%= form_for @book, url: books_path, html: { multipart: true } do |f| %>

  <%= form_errors_for @book%>

  <%= f.label :book_name%>:
  <%= f.text_field :book_name%>
  <br>
  <%= f.label :author%>:
  <%= f.text_field :author%>
  <br>
  <%= f.label :illustator%>:
  <%= f.text_field :illustator%>
  <br>
  <% if @book.cover.exists? %>
    <%= image_tag @book.cover.url(:medium) %>
  <% end %>

  <%= f.label :cover,  "Attach an Image"  %>
  <%= f.file_field :cover %>
  <br>
  <%= f.submit class: "btn btn-success"  %>
<% end %>
