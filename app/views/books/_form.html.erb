  <div class="row col-md-10">
  <%= form_for @book, html: { multipart: true }  do |f| %>

    <%= form_errors_for @book%>

    <div class="form-group col-md-4">
      <%= f.label :book_name%>
      <%= f.text_field :book_name, class: "form-control"%>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :author%>
      <%= f.text_field :author, class: "form-control"%>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :illustator%>
      <%= f.text_field :illustator, class: "form-control"%>
    </div>

    <div class="form-group col-md-8" >
      <%= f.label :description%>
      <%= f.text_area :description, class: "form-control", rows: "16"%>
    </div>

    <div class="form-group col-md-2">
      <%= f.label :cover,  "Attach an Cover Image"  %>
      <%= f.file_field :cover%>

      <% if @book.cover.exists? %>
        <%= image_tag @book.cover.url(:medium), class: "layout-margin" %>
      <% end %>
    </div>

    <div class="clearfix col-md-10">
      <%= f.submit class: "btn btn-success"  %>
    </div>

  <% end %>
</div>
