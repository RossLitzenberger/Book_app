<h2>Show Book</h2>
<p>Book_name: <%= @book.book_name%></p>
<p>Author: <%= @book.author%></p>
<p>Illustator: <%= @book.illustator%></p>
<p>User: <%= @book.user.name%></p>
<p>Description: <%= @book.description%></p>

<p>Book Cover: <br>
<% if @book.cover.present? %>
  <%= image_tag @book.cover.url(:medium)%></p>
<% else %>
  <%= image_tag "medium/missing.png"%></p>
<% end %>
<p><%= @book.get_upvotes.size  %> Like</p>
<p><%= @book.get_downvotes.size  %> Dislike</p>
<%= link_to 'Like', like_book_path(@book), class: "btn btn-default", method: :get  %>
 <br>
<%= link_to 'Dislike', dislike_book_path(@book), class: "btn btn-default", method: :get  %>

<br>
<% if @book.user == current_user %>
<%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger"%>
<% end %>



<br>
<p><%= @book.comments.count %></p>
<p><%= render @book.comments %> Comments</p>

<p><%= render "comments/form" %></p>
